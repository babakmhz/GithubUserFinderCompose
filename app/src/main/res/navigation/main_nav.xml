<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/searchFragment">


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.babakmhz.githubuserfindercompose.ui.main.search.SearchFragment"
        android:label="fragment_search"
         >
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment2" />
    </fragment>
    <dialog
        android:id="@+id/detailsFragment"
        android:name="com.babakmhz.githubuserfindercompose.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/detailsFragment2"
        android:name="com.babakmhz.githubuserfindercompose.ui.main.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="username"
            app:argType="string" />
    </fragment>
</navigation>